<!DOCTYPE html>

<html>
<head>
	<title>The CSS Garden of Good and Evil</title>
	<!-- if evil, evil.css... -->
</head>
<body>
	<!-- Form -->
	<form action='/' method='POST'>
		<label for="alignment">Alignment</label>
		<input type="radio" name="alignment" value="good">Good
		<input type="radio" name="alignment" value="evil">Evil

		<label for="favorite-food">Favorite Food:</label>
		<input type="text" name="favorite-food">

		<select>
			<option>Black</option>
			<option>White</option>
		</select>

		<label for="insanity">Insanity Level:</label>
		<input type="range" min="1" max="2" name="insanity">
	</form>

	<!-- Header -->
	<header>
		<h1>Welcome to the CSS Garden of {{alignment}}!</h1>
	</header>

	<!-- Biography -->
	{{#if good}}
		{{> bio-good}}
	{{/if}}
	{{#if evil}}
		{{> bio-evil}}
	{{/if}}

	<!-- Likes/Dislikes -->

	{{#if good}}
		{{> likes-good}}
	{{/if}}
	{{#if evil}}
		{{> likes-evil}}
	{{/if}}

	<!-- Resume -->
		{{#if good}}
		{{> resume-good}}
	{{/if}}
	{{#if evil}}
		{{> resume-evil}}
	{{/if}}


</body>
</html>